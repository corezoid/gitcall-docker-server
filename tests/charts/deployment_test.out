apiVersion: apps/v1
kind: Deployment
metadata:
  name: RELEASE-NAME-gitcall-docker-server-deployment
  labels:
    release: "RELEASE-NAME"
    app: "gitcall"
    tier: "docker_server"
spec:
  selector:
    matchLabels:
      release: "RELEASE-NAME"
      app: "gitcall"
      tier: "docker_server"
  strategy:
    type: RollingUpdate
  replicas: 1
  template:
    metadata:
      annotations:
        checksum/config: 6ccd4210b79df21a8d6bb6daac87738544fbf084585c46f2b7356acf0c44d409
        #prometheus.io/path: /metrics
        #prometheus.io/port: "9323"
        prometheus.io/scrape: "true"
      labels:
        release: "RELEASE-NAME"
        app: "gitcall"
        tier: "docker_server"
        http: "true"
    spec:
      terminationGracePeriodSeconds: 40
      containers:
        - name: main
          imagePullPolicy: "Always"
          image: docker:18.09.9-dind
          ports:
            - name: container-port
              containerPort: 2375
              protocol: TCP
            - name: metrics
              containerPort: 9323          
          resources:
            limits:
              cpu: "100m"
              memory: "200Mi"
            requests:
              cpu: "300m"
              memory: "400Mi"
          securityContext:
            privileged: true
          volumeMounts:
            - name: config
              mountPath: /etc/docker/daemon.json
              subPath: daemon.json
            - name: data
              mountPath: /var/lib/docker/
        - name: docker-daemon-exporter
          image: docker-hub.middleware.biz/utils/docker-daemon-exporter:0.1
          ports:
            - name: metrics
              containerPort: 8080
          volumeMounts:
            - name: data
              mountPath: /var/lib/docker/
      volumes:
        - name: config
          configMap:
            name: RELEASE-NAME-gitcall-docker-server-config
        - name: data
          emptyDir: {}
---
